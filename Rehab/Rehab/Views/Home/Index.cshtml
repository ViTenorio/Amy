@{
    ViewData["Title"] = "Entrar";
    @model Rehab.Models.HomeViewModel;
}
<link rel="stylesheet" type="text/css" href="~/css/home.css">
<div class="text-center">
    <h1 class="display-4">Bem Vindo @Model.userName</h1>
    <p>Estes são os usuario que desejam prestar serviços:<a />.</p>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">RG</th>
                    <th scope="col">CPF OU CNPJ</th>
                    <th scope="col">Data de Envio</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Aprovar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (UserDocumentImageViewModel image in Model.imagesToBeEvalueted)
                {
                    <tr id="@image.Id">
                        <th scope="row">@image.IdUser</th>
                        <td>@image.User.Name</td>
                        <td>@image.User.Email</td>
                        <td>@image.User.RG</td>
                        <td>@image.User.cpfCnpj</td>
                        <td>@image.UploadedDate</td>
                        <td class="table-container-image"><img onclick="showModal('@image.User.RG')" id="@image.User.RG" class="table-image" alt="@image.User.Name" src="@("data:image/jpeg;base64,"+Convert.ToBase64String(image.Image))"></td>
                        <td class="text-center">
                            <button onclick="Aprove ('@image.Id')" class="btn btn-primary avaliation-buttom">Aprovar</button>
                            <button onclick="Negate('@image.Id')" class="btn btn-danger avaliation-buttom">Negar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="myModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="img01">
        <div id="caption"></div>
    </div>

    <script type="text/javascript" src="~/js/home.js"></script>
