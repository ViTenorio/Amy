<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bg"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="196dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:background="@drawable/def_boder_style"
        android:src="@mipmap/ineedpurple"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="253dp"
        android:layout_height="154dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="27dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/usuario"
            android:textSize="20dp"
            android:fontFamily="@string/fontFamily"
            android:textColor="#CFCCCC" />

        <EditText
            android:id="@+id/tLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/def_boder_style"
            android:ems="10"
            android:paddingLeft="16dp"
            android:inputType="textPersonName"
            android:fontFamily="@string/fontFamily"
            android:text="nome@email.com"
            android:textColor="#BDD8D8" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/senha"
            android:fontFamily="@string/fontFamily"
            android:paddingLeft="5dp"
            android:textColor="#D4F5F5"/>

        <EditText
            android:id="@+id/tsenha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/def_boder_style"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#D4F5F5" />

    </LinearLayout>


    <TextView
        android:id="@+id/tcadastro"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="125dp"
        android:text="@string/cadastro"
        android:textSize="15dp"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLogin"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tEsqueceu_a_senha"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginBottom="70dp"
        android:text="@string/Esqueceu_a_senha"
        android:textAlignment="center"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tcadastro"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btLogin"
        android:onClick="goToCadastro"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginStart="104dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/lost_boder_style"
        android:text="@string/login"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/tcadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>