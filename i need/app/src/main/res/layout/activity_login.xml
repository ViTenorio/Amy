<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#34326e"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="212dp"
        android:layout_height="196dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:src="@mipmap/backgroud"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="253dp"
        android:layout_height="154dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="27dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:text="@string/usuario"
            android:textColor="#ff9900" />

        <EditText
            android:id="@+id/tLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#ff9900" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:text="@string/senha"
            android:textColor="#ff9900" />

        <EditText
            android:id="@+id/tsenha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#ff9900" />

    </LinearLayout>



    <TextView
        android:id="@+id/tcadastro"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="46dp"
        android:text="@string/cadastro"
        android:textColor="#ff9900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tEsqueceu_a_senha"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLogin"
        android:onClick=""/>

    <TextView
        android:id="@+id/tEsqueceu_a_senha"
        android:layout_width="124dp"
        android:layout_height="23dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="46dp"
        android:text="@string/Esqueceu_a_senha"
        android:textColor="#ff9900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tcadastro"
        app:layout_constraintTop_toBottomOf="@+id/btLogin"
        app:layout_constraintVertical_bias="0.38"
        android:onClick=""/>


    <Button
        android:id="@+id/btLogin"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginStart="104dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="18dp"
        android:background="#ff9900"
        android:text="@string/login"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/tcadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:onClick=""/>
</androidx.constraintlayout.widget.ConstraintLayout>